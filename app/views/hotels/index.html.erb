<div id="card-widgets">
  <% @hotels.each do |hotel| %>
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="product-card">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <a href="#" class="btn-floating btn-large btn-price waves-effect waves-light  pink accent-2"><%= hotel.rooms.count %></a>
              <img src="images/gallary/33.jpg" alt="product-img">
            </div>
            <div class="card-content">
              <div class="row">
                <div class="col s8">
                  <p class="card-title grey-text text-darken-4">
                    <a href="#" class="grey-text text-darken-4">Featured Product of The Month</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
