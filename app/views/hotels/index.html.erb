<div id="card-widgets">
  <% @hotels.each do |hotel| %>
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="product-card">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <%= link_to rooms_path(hotel), class:"btn-floating btn-large btn-price waves-effect waves-light  pink accent-2" do %>
                <%= hotel.rooms.count %>
              <% end %>
              <img src="/images/gallary/33.jpg" alt="product-img">
              <span class="card-title"><%= hotel.name %></span>
            </div>
            <div class="card-content">
              <p>
                <%= hotel.extra_info %>
              </p>
            </div>
            <div class="card-action">
              <%= link_to "Escolher meu quarto", rooms_path(hotel) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="divider"></div>
  <% end %>
</div>
