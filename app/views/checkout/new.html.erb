<div class="section center-align">
  <div class="row center">
    <div id="preselecting-tab" class="section">
      <h4 class="header">Forma de pagamento</h4>
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="col s12">
              <ul class="tabs tab-demo-active z-depth-1 cyan" style="width: 100%;">
                <li class="tab col s3"><a class="white-text waves-effect waves-light  active" href="#pagseguro"><i class="mdi-action-payment"></i> Pagseguro</a>
                </li>
                <li class="tab col s3"><a class="white-text waves-effect waves-light" href="#boleto"><i class="mdi-action-receipt"></i> Boleto</a>
                </li>
                <li class="tab col s3"><a class="white-text waves-effect waves-light" href="#deposito"><i class="mdi-editor-attach-money"></i> Depósito ou Transferência</a>
                </li>
                <div class="indicator" style="right: 120px; left: 121px;"></div><div class="indicator" style="right: 120px; left: 121px;"></div></ul>
              </div>
              <div class="col s12">
                <div id="pagseguro" class="col s12" style="display: block;">
                  <div class="container">
                    <div class="section">
                      <div class="row">
                        <section class="plans-container" id="plans">
                          <article class="col s8 offset-s2" style="align:center; !important">
                            <div class="card hoverable">
                              <div class="card-image cyan waves-effect">
                                <div class="card-title"><%= @user.lot.name %></div>
                                <div class="price"><sup>R$</sup><%= @value_pagseguro %><sub></sub></div>
                              </div>
                              <div class="card-action center-align">
                                <button class="waves-effect waves-light btn">Pagar</button>
                              </div>
                            </div>
                          </article>
                        </section>
                      </div>

                    </div>
                  </div>
                </div>
                <div id="boleto" class="col s12" style="display: none;">
                  <div class="col s8 offset-s2">
                    <div class="container">
                      <div class="section">
                        <div class="row">
                          <section class="plans-container" id="plans">
                            <article class="col s12" style="align:center; !important">
                              <div class="card hoverable">
                                <div class="card-image cyan waves-effect">
                                  <div class="card-title"><%= @user.lot.name %></div>
                                  <div class="price"><sup>R$</sup><%= @value_billet %><sub></sub></div>
                                </div>
                                <div class="card-action center-align">
                                  <%= select_tag "parcelas", "<option> Duas vezes </option> <option> Tres vezes </option> <option> Quatro vezes </option>".html_safe ,prompt: "À vista" %>
                                </div>
                                <div class="card-action center-align">
                                  <button class="waves-effect waves-light btn">Gerar boletos</button>
                                </div>
                              </div>
                            </article>
                          </section>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="deposito" class="col s12" style="display: none;">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--end container-->
