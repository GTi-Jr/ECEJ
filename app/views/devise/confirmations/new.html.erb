<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="input-field col s12 center">
            <p class="center login-form-text">Reenviar instruções de confirmação</p>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
            <%= f.email_field :email, id: 'email', class: 'error', required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)%>
            <label for="email" class="center-align">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.submit "Reenviar instruções de confirmação", class: 'btn waves-effect waves-light col s12'%>
          </div>
          <div class="input-field col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
