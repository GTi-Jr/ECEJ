<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="input-field col s12 center">
            <p class="center login-form-text">Reenviar instruções de confirmação</p>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-communication-email prefix"></i>
            <%= f.email_field :email, id: 'email', placeholder: "Email" ,class: 'error', required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= button_tag(type: 'submit', class: 'btn waves-effect waves-light col s12') do %>
              Reenviar instruções de confirmação
            <% end %>
          </div>
          <div class="input-field col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
