<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , id:"reset_pass_form"}) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="row">
          <div class="input-field col s12 center">
            <p class="center login-form-text">Modifique sua senha</p>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            <%= f.password_field :password, autofocus: true, placeholder: "Nova Senha" ,autocomplete: "off", id: 'password' %>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
              <%= f.password_field :password_confirmation, placeholder: "Confirme sua nova senha", autocomplete: "off", id:'confirm_password' %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= button_tag(type: 'submit', class: 'btn waves-effect waves-light col s12') do %>
              Modificar senha
            <% end %>
          </div>
          <div class="input-field col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
<script type="text/javascript">
$().ready(function() {
  $("#reset_pass_form").validate({
    errorElement : 'div',
    errorPlacement: function(error, element) {
      var placement = $(element).data('error');
      if (placement) {
        $(placement).append(error)
      } else {
        error.insertAfter(element);
      }
    }
  });
  $( "#password" ).rules( "add", {
    required: true,
    rangelength: [6,12],
    messages: {
      required: "Entre com sua senha",
      rangelength: "A senha deve conter entre 6 e 12 caracteres"
    }
  });
  $( "#confirm_password" ).rules( "add", {
    required: true,
    rangelength: [6,12],
    equalTo: "#password",
    messages: {
      required: "Entre com sua senha",
      rangelength: "A senha deve conter entre 6 e 12 caracteres",
      equalTo: "As senhas n√£o conferem"
    }
  });
});
</script>
