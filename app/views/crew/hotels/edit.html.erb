<div id="" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for @hotel, url: { action: "update" }, method: :patch do |f| %>
      <div class="row">
        <div class="input-field col s12 center">
          <p class="center login-form-text">Edição de hotel</p>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12 center">
          <% if @hotel.errors.any? %>
            <ul>
              <% @hotel.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>            
          <% end %>
        </div>
      </div>

      <div class="row margin">
        <div class="col s12 m6 l4">
          <%= f.label :name, "Nome", class: "center-align" %>
          <%= f.text_field :name, id: 'name' %>
        </div>

        <div class="col s12 ">
          <%= f.label :extra_info, "Informação adicional", class: "center-align" %>
          <%= f.text_area :extra_info, id: 'extra_info' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Editar", class: 'btn waves-effect waves-light light-blue darken-1 col s12' %>
        </div>
      </div>
    <% end %>
    <p><%= notice %></p>
    <p><%= alert %></p>
  </div>
</div>
