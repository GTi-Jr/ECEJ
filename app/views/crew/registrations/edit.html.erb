<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>      <div class="row">
        <div class="input-field col s12 center">
          <p class="center login-form-text">Edição de administrador</p>
          <%= devise_error_messages! %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Esperando confirmação para: <%= resource.unconfirmed_email %></div>
      <% end %>
        
      <div class="row margin">
        <!----------------NOME----------- -->
        <div class="col s12">
          <%= f.label :name, "Nome", class: "center-align" %>
          <%= f.text_field :name, id: 'name', autofocus: true %>
        </div>
        <!----------------EMAIL----------- -->
        <div class="col s12">
          <%= f.label :email, class: "center-align" %>
          <%= f.email_field :email, id: 'email' %>
        </div>
        <!----------------SENHA----------- -->
        <div class="col s12">
          <%= f.label :password, "Senha" %> <i>(Deixe em branco caso não queira mudá-la.</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <!----------------CONFIRMAÇÃO----------- -->
        <div class="col s12">
          <%= f.label :password_confirmation, "Confirmação da senha" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <!----------------SENHA ATUAL----------- -->
        <div class="col s12">
          <%= f.label :current_password, "Senha atual" %> <i>(Sua senha é necessária caso queira realizar as alterações)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="input-field center-align col s12">
          <%= f.submit "Editar", class: 'btn waves-effect waves-light light-blue darken-1 s12 m6 l4 ' %>
        </div>
      </div>

    <% end %>
    <div class="center-align">
      <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn waves-effect waves-light red darken-1 s12 m6 l4", method: :delete %>
    </div>
    
  </div>
</div>
