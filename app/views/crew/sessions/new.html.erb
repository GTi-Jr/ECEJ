<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: {:class => 'login-form'} ) do |f| %>
      <div class="row">
        <div class="input-field col s12 center">
          <%= image_tag 'logo.png', class: 'circle responsive-img valign profile-image-login' %>
          <p class="center login-form-text">ECEJ 2016</p>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.email_field :email, id: 'username', autofocus: true, placeholder:"Email" %>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password, id:'password', autocomplete: "off", placeholder: "Senha" %>
        </div>
      </div>
      <div class="row">
        <% if devise_mapping.rememberable? -%>
          <div class="input-field col s12 m12 l12  login-text">
            <%= f.check_box :remember_me, id: 'remember-me' %>
            <label for="remember-me">Lembrar-me</label>
          </div>
        <% end -%>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Entrar", class: 'btn waves-effect waves-light col s12'%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6 m6 l6 right">
          <p class="margin right-align medium-small"><%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %></p>
        </div>
      </div>

    <% end %>
  </div>
</div>
