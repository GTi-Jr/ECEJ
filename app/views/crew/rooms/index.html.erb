<div>
  <h4 class="header">Quartos</h4>
  <div class="row">
    <div class="col s12 m8 l9">
      <table id="rooms_table" class="responsive-table display highlight" cellspacing="0" data-order='[[ 1, "asc" ]]' data-page-length='25'>
        <thead>
            <tr>
              <th>Hotel</th>
              <th>Número</th>
              <th>Nome</th>
              <th>Capacidade</th>
              <th>Ações</th>
            </tr>
        </thead>

        <tfoot>
            <tr>
              <th>Hotel</th>
              <th>Número</th>
              <th>Nome</th>
              <th>Capacidade</th>
              <th>Ações</th>
            </tr>
        </tfoot>

        <tbody>
          <% if !@rooms.nil? %>
            <% @rooms.each do |room| %>
              <tr>
                <td><%= room.hotel %></td>
                <td><%= room.number %></td>
                <td><%= room.name %></td>
                <td><%= "#{room.users.count} / #{room.capacity}" %></td>
                <td>
                  <%= link_to "Editar", edit_crew_room_path(room) %>
                  |
                  <%= link_to "Excluir", crew_room_path(room), method: :delete, data: { confirm: "Caso hajam pessoas dentro do quarto, ao excluí-lo, essas pessoas ficarão sem acomodações. Deseja realmente apagar o quarto #{ room.number } do #{ room.hotel }" } %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
$('#rooms_table').DataTable();
</script>
