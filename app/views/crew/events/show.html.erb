<div id="" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <div class="s12 m6 l4 center-align">
      <h3><%= @event.name %></h3>
      <p><%= @event.description %></p>
    </div>

    <div>
      <h4 class="header">Usuários</h4>
      <div class="row">
        <div class="col s12 m8 l9">
          <table id="users_table" class="responsive-table display highlight" cellspacing="0" data-order='[[ 1, "asc" ]]' data-page-length='25'>
            <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>EJ</th>
                  <th>Ações</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>EJ</th>
                    <th>Ações</th>
                </tr>
            </tfoot>

            <tbody>
              <% if !@users.nil? %>
                <% @users.each do |user, payment| %>
                  <tr class="<%= "left-red-border" if !user.active %>">
                    <td><%= link_to user.name, edit_crew_user_path(user) %></td>
                    <td><%= user.email %></td>
                    <td><%= user.junior_enterprise %></td>
                    <td>
                      <%= link_to "Remover", crew_remove_event_user_path(@event, user), method: :delete, data: { confirm: "Deseja realmente remover #{user.name} do evento #{@event.name}" } %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <p><%= notice %></p>
    <p><%= alert %></p>
  </div>
</div>
<script>
$('#users_table').DataTable();
</script>
