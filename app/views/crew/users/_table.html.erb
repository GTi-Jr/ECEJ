<div>
  <h4 class="header">Usu√°rios</h4>
  <div class="row">
    <div class="col s12 m8 l9">
      <table id="users_table" class="responsive-table display highlight" cellspacing="0" data-order='[[ 1, "asc" ]]' data-page-length='25'>
        <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>EJ</th>
              <th>Editar</th>
            </tr>
        </thead>

        <tfoot>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>EJ</th>
                <th>Editar</th>
            </tr>
        </tfoot>

        <tbody>
          <% if !@users.nil? %>
            <% @users.each do |user, payment| %>
              <tr class="<%= "left-red-border" if !user.active %>">
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.junior_enterprise %></td>
                <td><%= link_to "Perfil", edit_crew_user_path(user) %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
